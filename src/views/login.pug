extends base.pug

block content 
    if errorMessage
        span=errorMessage
    form(method="POST")
        input(placeholder="Username", type="text", required, name="username")
        input(placeholder="Password", type="password", required, name="password")
        input(type="submit", value="Login")
        br
        a(href="/users/github/start") Continue with Github &rarr;
        br
        a(href="/users/kakao/start") Continue with Kakao &rarr;
    hr
    div 
        span Don't have an account? 
        a(href="/join") Create one now &rarr;
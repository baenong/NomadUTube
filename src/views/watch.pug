extends base.pug

block content
    div#videoContainer(data-id=video._id)
        video(src="/" + video.fileUrl)
        div#videoControls
            input(type="range", step="1", value=0, min="0")#timeline
            div.videoControls__container
                div.videoControls__left
                    button#play
                        i.fas.fa-play
                    div.videoControls__volume
                        button#mute 
                            i.fas.fa-volume-low
                        input(type="range", step="0.1", value=0.5, min="0", max="1")#volume
                    div.videoControls__time
                        span#playTime 00:00
                        span  /  
                        span#totalTime 00:00
                div.videoControls__right
                    button#fullscreen
                        i.fas.fa-expand
    div#videoInfo
        div#videoMeta
            ul#videoMeta__hashtags
                each hashtag, index in video.hashtags
                    if index < 2
                        li=hashtag
            h1 #{video.title}
            span #{video.meta.views} #{video.meta.views === 1 ? "view" : "views"} Â·
            span #{video.createdAt.getFullYear()}. #{video.createdAt.getMonth()}. #{video.createdAt.getDate()}.
        div#video__description
            div
                a(href=`/users/${owner._id}`)#video__uploader
                    if !owner.avatarUrl
                        span ðŸ˜Š
                    else 
                        span
                            img(src=`${owner.socialOnly?"":"/"}` + owner.avatarUrl).video__uploader-avatar
                    span #{owner.name}
            ul#video__description__hashtags
                each hashtag in video.hashtags
                    li=hashtag
            p=video.description
        div#video__edit
            if String(video.owner) === String(loggedInUser._id)
                a(href=`${video.id}/edit`) Edit Video &rarr;
                br
                a(href=`${video.id}/delete`) Delete Video &rarr;
    if loggedIn
        div.video__comments
            form.video__comment-form#commentForm
                textarea(cols="30", rows="10", placeholder="Write a comment...").comment
                button Add Comment
    
block scripts 
    script(src="/static/js/videoPlayer.js") 
    if loggedIn 
        script(src="/static/js/commentSection.js") 
        //- if you input / before url, that means absolute url(root/~~) else relative url